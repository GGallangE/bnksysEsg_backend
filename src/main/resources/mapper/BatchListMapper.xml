<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bnksys.esg.mapper.BatchListMapper">

    <select id = "getAllBatchList">
        SELECT *
          FROM BATCH_LIST
         WHERE STCD = "01"
    </select>

    <select id = "findAll_ApiArgs">
        SELECT *
          FROM BATCH_DETAIL_LIST
         WHERE BATCH_LIST_ID = #{batchlistid}
    </select>

    <select id = "find_apiformat">
        SELECT API_FORMAT
          FROM BATCH_LIST
    </select>

    <select id = "find_batchdetaillist">
        SELECT *
          FROM BATCH_DETAIL_LIST
         WHERE BATCH_LIST_ID = #{batchlistid}
           AND STCD = "01"
    </select>

    <select id = "find_requesttlist">
        SELECT *
          FROM API_RQRD_ITEMS
         WHERE API_LIST_ID = #{apilistid}
    </select>

</mapper>